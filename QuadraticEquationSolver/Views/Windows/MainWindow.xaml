<Window x:Class="QuadraticEquationSolver.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:QuadraticEquationSolver"
        xmlns:v="clr-namespace:QuadraticEquationSolver.ViewModels"
        Title="{Binding Title}"
        Width="800" Height="450">
    <Window.DataContext>
        <v:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel Margin="20">
            <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding TitleLength, StringFormat=Длина заголовка {0} символа}"/>
            <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding UserName, StringFormat=Имя пользователя {0}}"/>
        </StackPanel>
    </Grid>
</Window>
